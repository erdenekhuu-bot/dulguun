<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPropertyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Address"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/edit_address"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp" />

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Address"
            android:inputType="textPersonName"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:minHeight="30dp"
            tools:ignore="LabelFor,MissingConstraints"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="57dp" />

        <TextView
            android:id="@+id/suburb"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Suburb"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/edit_address"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />

        <EditText
            android:id="@+id/edit_suburb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Suburb"
            android:inputType="textPersonName"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:minHeight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/suburb"
            tools:ignore="LabelFor,MissingConstraints"
            tools:layout_editor_absoluteX="24dp" />

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="State"
            app:layout_constraintTop_toBottomOf="@+id/edit_suburb"
            tools:layout_editor_absoluteX="20dp" />

        <EditText
            android:id="@+id/edit_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="State"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:minHeight="30dp"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/state"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/postcode"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Postcode"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/edit_state"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/edit_postcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postcode"
            android:layout_marginHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:minHeight="30dp"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/postcode"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Price"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/edit_postcode"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="33dp" />

        <EditText
            android:id="@+id/edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Price"
            android:inputType="number"
            android:minHeight="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/price"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp" />

        <Button
            android:id="@+id/new_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_price"
            tools:layout_editor_absoluteX="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>